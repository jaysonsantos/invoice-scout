{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all minor and patch updates",
      "automerge": true,
      "automergeType": "pr",
      "requiredStatusChecks": null
    }
  ],
  "platformAutomerge": true,
  "automergeStrategy": "squash",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2
}
